{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@src/*": ["./src/*"],
      "@api/*": ["./src/app/api/*"],
      "@app/*": ["./src/app/app/*"],
      "@components/*": ["./src/components/*"],
      // "@utils/*": ["src/user/*"],
      "@resources/*": ["./src/resources/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/utils/response-type.ts"
  ],
  "exclude": ["node_modules"]
}
